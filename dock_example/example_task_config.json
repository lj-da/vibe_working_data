{
  "id": "example_chrome_task",
  "snapshot": "chrome",
  "instruction": "启动Chrome浏览器并打开指定网站",
  "config": [
    {
      "type": "launch",
      "parameters": {
        "command": [
          "google-chrome",
          "--remote-debugging-port=1337"
        ]
      }
    },
    {
      "type": "launch",
      "parameters": {
        "command": [
          "socat",
          "tcp-listen:9222,fork",
          "tcp:localhost:1337"
        ]
      }
    },
    {
      "type": "chrome_open_tabs",
      "parameters": {
        "urls_to_open": [
          "https://www.baidu.com/"
        ]
      }
    },
    {
      "type": "activate_window",
      "parameters": {
        "window_name": "Google Chrome"
      }
    }
  ],
  "related_apps": [
    "chrome"
  ],
  "proxy": false,
  "fixed_ip": false,
  "possibility_of_env_change": "low"
}
